<%= form_for to_do_item, remote: true do |f| %>
  <% if to_do_item.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(to_do_item.errors.count, "error") %> errors.</h4>
      <ul>
        <% to_do_item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_group_tag(to_do_item.errors[:description]) do %>
    <div class="form-group">
      <%= f.text_field :description, class: 'form-control', placeholder: "Enter task" %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.submit "Add Task", class: 'btn btn-success' %>
  </div>
<% end %>