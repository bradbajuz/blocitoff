<div class="page-header">
  <div class="col-md-10">
    <h1>My Tasks</h1>
  </div>
</div>

<table class="table table-striped table-condensed">
<thead>
  <tr>
    <th></th>
    <th colspan="1">Description</th>
    <th colspan="1">Days left</th>
    <th colspan="1">Complete</th>
  </tr>
</thead>
<tbody>
  <% @to_do_items.each do |item| %>
    <tr id="<%= "to_do_items-#{item.id}" %>">
      <td></td>
        <td><%= item.description %></td>
        <td><%= distance_of_time_in_words(Time.now, item.created_at + 7.days) %></td>
        <td>
          <% if policy(@to_do_item).destroy? %>
            <%= link_to 'Done!', item, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %>
          <% end %>
        </td>
    </tr>
  <% end %>
</tbody>
</table>
<div class="contextual">
  <% if policy(@to_do_item).create? %>
    <%= render partial: 'form', locals: { to_do_item: @to_do_item } %>
  <% end %>
</div>
</br>


