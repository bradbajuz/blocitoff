<div class="page-header">
  <div class="col-md-10">
    <h1>My Tasks</h1>
  </div>
</div>

<table class="table table-striped table-condensed">
<thead>
  <tr>
    <th colspan="1">Description</th>
    <th colspan="1">Days left</th>
    <th colspan="1">Complete</th>
  </tr>
</thead>
<tbody id='to_do_list'>
  <%= render partial: 'to_do_item', collection: @to_do_items %>
</tbody>
</table>
<div>
  <% if policy(@to_do_item).create? %>
    <%= render partial: 'form', locals: { to_do_item: @to_do_item } %>
  <% end %>
</div>


